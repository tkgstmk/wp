  <div class="container">

    <div class="row" >
      <div class="col-7 mt-3 pt-4 pl-5 pb-4" style="background-color:white;">
      <%= form_with(model: @user, local: true) do |f| %>
        <table>
          <tr>
            <td>名前</td>
            <td>　<%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>目標</td>
            <td>　<%= f.text_field :goal %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>

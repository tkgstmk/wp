<%= render :partial => "/list" %>

<div class="container">
  <div class="row pt-4">
   <div><p><b>みんなのプロジェクト一覧</b></p></div>
  </div>
  
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-2 border mx-2 mt-2 pt-2" style="background-color:#ffffff;">
      <%#= link_to home_path do %>
      <%= link_to home_path(project.id) do %>
      <ul style="list-style: none;">
        <li><%= project.start_time.strftime("%y-%m-%d") %></li>
        <li><%= project.user.name %>さん</li>
        <li><%= project.title %></li>
        <li class="mt-3"><%= attachment_image_tag project, :image, size: "75x75", fallback: "no_image.jpg" %></li>
      </ul>
      <% end %>
      </div>
    <% end %>
  </div>
    
    
</div>


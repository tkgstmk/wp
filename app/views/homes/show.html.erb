<%= render :partial => "/list" %>

<p id="notice"><%#= notice %></p>

<div class="container">
  <div class="row" >
    <div class="col-7 mt-3 pt-4 pl-5 pb-4" style="background-color:white;">
      <table>
        <tr>
          <td><%= @project.start_time.strftime("%y-%m-%d") %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= @project.user.name %>さん</td>
          <td></td>
        </tr>
        <tr class="mt-3">
          <td><b>タイトル</b></td>
          <td><b>　<%= @project.title %></b></td>
        </tr>
        <tr>
          <td><b>内容</b></td>
          <td><b>　<%= @project.explanation %></b></td>
        </tr>
      </table>
    </div>
              
    <div class="col-3 mt-3 pt-4">
      <p>
        <!--<strong>写真</strong>-->
        <%#= @project.image %><%= attachment_image_tag @project, :image, size: "100x100", fallback: "no_image.jpg" %>
      </p>
    </div>
      
  </div>


  <div class="row mt-5" style="text:center;">
    <%= link_to '戻る', projects_path, class:'btn btn-success' %>
  </div>
  
</div>
